<!doctype html>
<html lang="en" class="min-h-full antialiased">
<head>
	{# include our meta tags #}
	{% include "partials/meta.njk" %}
	{% include "partials/css.njk" %}
</head>

<body class="bg-black">
	
<div class="main relative bg-white" role="main">
	{% include "partials/header.njk" %}

	<div class="main flex-1 lg:pt-16">
		{{ content | safe }}
	</div>

</div>

{% include "partials/footer.njk" %}

{% include "partials/scripts.njk" %}


{% if section == 'Brand' %}
	{% set collection = collections.brand %}
{% elif section == 'Components' %}
	{% set collection = collections.componentsSorted %}
{% endif %}

<div class="drawers js-drawers z-overlay">
    <div id="topic-menu" class="nav-menu drawer drawer--left z-menu">
        <div class="drawer__header p-4 fixed h-16 top-0 py-6 z-shell">
            <div class="font-sans-demi">{{ section }}</div>
            <i class="fal fa-times drawer__close-btn js-drawer-close-btn absolute p-6 top-0 right-0 cursor-pointer z-shell"></i>
        </div>
        <div class="js-topic-menu-drawer drawer__content absolute h-full w-full overflow-y-scroll scrolling-touch">
			<!-- Any content can go here -->
			<div class="js-topic-menu md:max-h-screen md:w-full md:overflow-y-scroll">
				<div class="p-8">
					<div class="text-sm-2 font-sans-demi mb-2 uppercase tracking-wider text-gray-500">{{ section }}</div>
					{% for entry in collection  %}
						<a href="{{ entry.url }}" class="block py-1{% if page.url == entry.url %} text-brand-primary font-sans-demi{% else %} text-gray-700{% endif %}">{{ entry.data.title }}</a>
					{% endfor %}
				</div>
			</div>
        </div>
    </div>
</div>

<script>
	enquire.register("screen and (min-width: " + 768 + "px)", {
        setup: function() {
            $(".js-topic-menu").appendTo(".js-topic-menu-drawer");
        },
        match: function() {
            $(".js-topic-menu").appendTo(".js-topic-menu-sidebar");
        },
        unmatch: function() {
            $(".js-topic-menu").appendTo(".js-topic-menu-drawer");
        }
    });
</script>

{{ closingBody | safe }}

</body>
</html>
