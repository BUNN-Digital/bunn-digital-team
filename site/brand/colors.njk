<h2 class="section-heading">BUNN Corporate</h2>

<div class="sm:flex flex-wrap mb-4 pb-8 -mx-2">
	{% for color in corporate %}
	<div class="w-full sm:w-1/2 md:w-1/3 my-4 px-2">
		<div class="mx-auto rounded shadow">
			<div class="h-32 w-full rounded-t {{ color.swatch }}"></div>
			<div class="rounded-b text-center text-sm-1 p-2">
				{{color.hex}}
			</div>
		</div>
		<div class="font-mono text-sm-1 text-gray-500 block text-center py-2">
			{{color.name}}
		</div>
	</div>
	{% endfor %}
</div>

